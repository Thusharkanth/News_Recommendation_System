<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.ood_coursework.FXML files.GetRecommendationsController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #336699;">
        <Label text="Recommended Articles" style="-fx-font-size: 18; -fx-text-fill: white;"/>
        <Button text="Back" fx:id="backButton" style="-fx-background-color: #ff6666; -fx-text-fill: white;"/>
    </HBox>

    <!-- Article Display Section -->
    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 20;" layoutY="50" layoutX="20">
        <!-- Article Title -->
        <Label fx:id="articleTitle" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

        <!-- Article Content -->
        <TextArea fx:id="articleContent" prefHeight="200" wrapText="true" editable="false" style="-fx-font-size: 14;"/>

        <!-- Rating Section -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Rate this Article:" style="-fx-font-size: 14;"/>
            <ComboBox fx:id="ratingComboBox" prefWidth="100">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="1"/>
                        <String fx:value="2"/>
                        <String fx:value="3"/>
                        <String fx:value="4"/>
                        <String fx:value="5"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <Button text="Submit Rating" fx:id="submitRatingButton"/>
        </HBox>

        <!-- Navigation Buttons (Previous/Next) -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Previous" fx:id="previousButton"/>
            <Button text="Next" fx:id="nextButton"/>
        </HBox>
    </VBox>

</AnchorPane>
