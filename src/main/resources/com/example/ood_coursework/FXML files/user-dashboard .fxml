<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.ood_coursework.FXML files.UserDashboardController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10; -fx-background-color: #336699;">
            <Label style="-fx-font-size: 18; -fx-text-fill: white;" text="Welcome, [User's Name]" />
            <Button fx:id="logoutButton" style="-fx-background-color: #ff6666; -fx-text-fill: white;" text="Logout" />
        </HBox>

        <!-- Main Dashboard Buttons -->
        <VBox alignment="CENTER" layoutX="20" layoutY="50" spacing="15" style="-fx-padding: 20;">
            <Button fx:id="viewArticlesButton" prefWidth="200" text="View Articles" />
            <Button fx:id="getRecommendationsButton" prefWidth="200" text="Recommended articles " />
            <Button fx:id="manageProfileButton" prefWidth="200" text="Manage Profile" />
        </VBox>
    </children>
</AnchorPane>
